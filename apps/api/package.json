{
  "name": "@book-wise/api",
  "version": "1.0.0",
  "description": "API service for BookWise application",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx --env-file .env --watch src/server.ts",
    "build": "esbuild 'src/**/*.ts' --outdir=dist --bundle --minify --platform=node --target=esnext,node24 --format=esm --packages=external && tsc-alias -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "test:integration": "NODE_ENV=test vitest run --project integration",
    "test:unit": "NODE_ENV=test vitest run --project unit",
    "test:coverage": "NODE_ENV=test vitest run --coverage",
    "lint": "eslint"
  },
  "dependencies": {
    "@fastify/auth": "^5.0.4",
    "@fastify/autoload": "^6.3.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/env": "^5.0.3",
    "@fastify/jwt": "^10.0.0",
    "@fastify/redis": "^7.1.0",
    "@fastify/sensible": "^6.0.4",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@fastify/type-provider-typebox": "^6.1.0",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "close-with-grace": "^2.3.0",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "nanoid": "^5.1.6",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "typebox": "^1.0.61",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@faker-js/faker": "^10.1.0",
    "@types/node": "^24.10.3",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^4.0.15",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "pino-pretty": "^13.1.3",
    "prisma": "^7.1.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript-eslint": "^8.49.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.15"
  }
}
